<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack_60"
    android:orientation="vertical"
    tools:context=".effect.activity.MyEditorActivity">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_18"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/iv_save"
            style="@style/saveBtnText"
            android:text="@string/txt_save" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/adView"
        android:layout_below="@id/rl_header"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mContentRootView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_face"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/setback"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/setimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/setfront"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                    <com.tools.photolab.effect.custom.stickerView.StickerView
                        android:id="@+id/sticker_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:showBorder="true"
                        app:showIcons="true" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_100">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_75"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@color/colorBlack"
                    app:tabGravity="fill"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="fixed"
                    app:tabPaddingEnd="0dp"
                    app:tabPaddingStart="0dp" />

                <LinearLayout
                    android:id="@+id/linBackgroundBlur"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_75"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlack"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/sbBackgroundOpacity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:max="100"
                        android:min="1"
                        android:progress="1"
                        android:progressTint="@android:color/white"
                        android:thumbTint="@android:color/white" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/margin_25"
                    android:background="@color/colorRecyclerViewBack" />

                <LinearLayout
                    android:id="@+id/linEffect"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_100"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_25"
                        android:background="#55000000"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_5">

                        <androidx.appcompat.widget.AppCompatSeekBar
                            android:id="@+id/sbFrameOpacity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:max="100"
                            android:progress="100"
                            android:progressTint="@android:color/white"
                            android:thumbTint="@android:color/white" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerForegroundFilter"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_75"
                        android:background="@color/colorBlack"
                        android:orientation="horizontal"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/custom_bottom_tab" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_sticker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhiteOverlay"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:orientation="horizontal">

                <com.tools.photolab.effect.custom.CustomTextView
                    android:id="@+id/tvText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/txt_stickers"
                    android:textSize="@dimen/textsize_16" />

                <!--suppress AndroidDomInspection -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivClose"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/tvText"
                    android:layout_alignBottom="@id/tvText"
                    android:background="?attr/selectableItemBackground"
                    android:padding="15dp"
                    android:src="@drawable/ic_cross_white"
                    android:tint="@color/colorBlack" />

                <!--suppress AndroidDomInspection -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCheckMark"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/tvText"
                    android:layout_alignBottom="@id/tvText"
                    android:layout_alignParentRight="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="15dp"
                    android:src="@drawable/ic_checkmark_white"
                    android:tint="@color/colorBlack" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerSticker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivShowHomeOption"
        style="@style/styleShowHomeMainOption"
        android:layout_above="@id/adView"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_110" />

    <ProgressBar
        android:id="@+id/crop_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:progress="0"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/adView"
        style="@style/BannerAdsView"
        android:minHeight="@dimen/margin_50">

    </RelativeLayout>

</RelativeLayout>